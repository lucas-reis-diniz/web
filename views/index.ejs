<!DOCTYPE html>
<html>
<head>
  <title>KETSU Checker - Painel</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>KETSU Checker - Painel</h1>

  <section class="stats">
    <div class="card">
      <h2>Total Registros</h2>
      <p><%= stats.total %></p>
    </div>
    <div class="card">
      <h2>Hoje</h2>
      <p><%= stats.today %></p>
    </div>
    <div class="card">
      <h2>Por Servidor</h2>
      <ul>
        <% for (let s in stats.byServer) { %>
          <li><strong><%= s %></strong>: <%= stats.byServer[s] %></li>
        <% } %>
      </ul>
    </div>
    <div class="card">
      <h2>Por Clan</h2>
      <ul>
        <% for (let c in stats.byClan) { %>
          <li><strong><%= c %></strong>: <%= stats.byClan[c] %></li>
        <% } %>
      </ul>
    </div>
  </section>

  <section>
    <h2>Submiss√µes Recentes</h2>
    <table>
      <thead>
        <tr>
          <th>Data/Hora</th>
          <th>Nick</th>
          <th>Servidor</th>
          <th>Clan</th>
          <th>Usu√°rio Discord</th>
        </tr>
      </thead>
      <tbody>
        <% submissions.forEach(sub => { %>
          <tr>
            <td><%= new Date(sub.timestamp).toLocaleString("pt-BR") %></td>
            <td><%= sub.nick %></td>
            <td><%= sub.server %></td>
            <td><%= sub.clan %></td>
            <td><%= sub.username %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <p>
    <a href="/csv">‚¨áÔ∏è Baixar CSV completo</a> |
    <a href="/api/stats" target="_blank">üì° Ver JSON /api/stats</a>
  </p>
</body>
</html>
